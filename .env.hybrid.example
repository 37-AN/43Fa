# ShadowPlant Hybrid Mode (collector in DMZ, UI exposed to IT)
POSTGRES_USER=shadow
POSTGRES_PASSWORD=change-db-password
POSTGRES_DB=shadowplant
DATABASE_URL=postgresql+psycopg://shadow:change-db-password@shadowplant-db:5432/shadowplant
SECRET_KEY=replace-with-long-random-secret
RATE_LIMIT=120/minute
EXPECTED_ALEMBIC_REVISION=0001_init
WORKER_HEARTBEAT_TTL_SECONDS=180
WORKER_HEARTBEAT_INTERVAL_SECONDS=30
WORKER_ANALYTICS_INTERVAL_SECONDS=300

# Collector options (OT files/messages into inbox)
COLLECTOR_POLL_SECONDS=30
COLLECTOR_ADMIN_USERNAME=admin
COLLECTOR_ADMIN_PASSWORD=admin123

# Optional observability
PROM_RETENTION=14d
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-grafana-password
